@model IEnumerable<dierentuinn.Models.Dieren>

@{
    ViewData["Title"] = "Dierens";
}

<h1>Dierens</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Species</th>
            <th>Category</th>
            <th>Size</th>
            <th>Dietary Class</th>
            <th>Activity Pattern</th>
            <th>Enclosure</th>
            <th>Space Requirement</th>
            <th>Security Requirement</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dier in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => dier.Name)</td>
                <td>@Html.DisplayFor(modelItem => dier.Species)</td>
                <td>@Html.DisplayFor(modelItem => dier.Category != null ? dier.Category.Name : "No Category")</td>
                <td>@Html.DisplayFor(modelItem => dier.Size)</td>
                <td>@Html.DisplayFor(modelItem => dier.DietaryClass)</td>
                <td>@Html.DisplayFor(modelItem => dier.ActivityPattern)</td>
                <td>@Html.DisplayFor(modelItem => dier.Enclosure != null ? dier.Enclosure.Name : "No Enclosure")</td>
                <td>@Html.DisplayFor(modelItem => dier.SpaceRequirement)</td>
                <td>@Html.DisplayFor(modelItem => dier.SecurityRequirement)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@dier.Id" class="btn btn-secondary">Edit</a>
                    <a asp-action="Details" asp-route-id="@dier.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@dier.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
